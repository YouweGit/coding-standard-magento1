<ruleset name="Mediact/Magento1">
    <description>MediaCT coding standards for Magento1.</description>

    <!-- Base rules on MediaCT -->
    <rule ref="../../../coding-standard/src/MediactCommon"/>

    <!-- Base rules on Magento Marketplace -->
    <rule ref="../../../../magento/marketplace-eqp/MEQP1"/>

    <!-- Exclude rules for Magento -->
    <rule ref="PSR1.Classes.ClassDeclaration.MissingNamespace">
        <exclude-pattern>app/code/*</exclude-pattern>
    </rule>
    <rule ref="Squiz.Classes.ValidClassName.NotCamelCaps">
        <exclude-pattern>app/code/*</exclude-pattern>
    </rule>
    <rule ref="PSR2.Classes.ClassDeclaration.ExtendsLine">
        <exclude-pattern>app/code/*</exclude-pattern>
    </rule>
    <rule ref="PSR2.Classes.ClassDeclaration.ImplementsLine">
        <exclude-pattern>app/code/*</exclude-pattern>
    </rule>
    <rule ref="Squiz.Commenting.FunctionComment.ScalarTypeHintMissing">
        <exclude-pattern>app/code/*</exclude-pattern>
    </rule>
    <rule ref="MediactCommon.Php7.ReturnType.MissingReturnType">
        <exclude-pattern>app/code/*</exclude-pattern>
    </rule>
    <rule ref="Squiz.Commenting.FunctionComment.TypeHintMissing">
        <exclude-pattern>app/code/*</exclude-pattern>
    </rule>
    <rule ref="PSR2.Methods.MethodDeclaration.Underscore">
        <exclude-pattern>app/code/*</exclude-pattern>
    </rule>
    <rule ref="Squiz.Commenting.FunctionComment.EmptyThrows">
        <exclude-pattern>app/code/*</exclude-pattern>
    </rule>
    <rule ref="Generic.Formatting.MultipleStatementAlignment.NotSameWarning">
        <exclude-pattern>app/code/*</exclude-pattern>
    </rule>
</ruleset>
